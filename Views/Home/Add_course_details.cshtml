@model TTGenerator.Models.Add_course_details
@using (Html.BeginForm("Add_course_details", "Home", FormMethod.Post))
{
    <table border="1">
        <thead>
            <tr>
                <td>Course_ID</td>
                <td>Course_Name</td>
                <td>Department</td>
                <td>L</td>
                <td>T</td>
                <td>P</td>
                <td>C</td>
                <td>Course_type</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <!--(SelectList)ViewBag.listfnamenewSelectList(ViewBag.listfname)--!>
                             <td><input type="text" id="courseid" asp-for="Course_id" /></td>
                             <td><input type="text" itemid="coursename" asp-for="Course_name" /></td>
                             <td>
                                <select id="department" asp-for="Department">
                                <option value="AI&DS">AI&DS</option>
                                <option value="CSE">CSE</option>
                                <option value="IT">IT</option>
                                <option value="BME">BME</option>
                                <option value="ECE">ECE</option>
                                <option value="EEE">EEE</option>
                                <option value="MECH">MECH</option>
                                <option value="CIVIL">CIVIL</option>
                                <option value="MBA">MBA</option>
                                <option value="BIOTECH">BIOTECHs</option>
                                </select>
                             </td>
                             <td>
                                 <input type="number" id="l" asp-for="L"/>
                             </td>
                             <td>
                                 <input type="number" id="t" asp-for="T"/>
                             </td>
                             <td>
                                 <input type="number" id="p" asp-for="P"/>
                             </td>
                             <td>
                                 <input type="number" step="any" id="c" asp-for="C"/>
                             </td>
                             <td>
                             <select id="course_type" asp-for="Course_type">
                            <option value=101>AE</option>
                            <option value=102>OE</option>
                            <option value=108>CE</option>
                            <option value=103>FT</option>
                            <option value=104>PET</option>
                            <option value=105>Honors</option>
                            <option value=106>Core</option>        
                            </select>
                             </td>
                                 
                             </tr>

                      </tbody>
                  </table>
                   <input type="submit"/>
}
